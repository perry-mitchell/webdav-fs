{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "commonjs",
        "target": "es5",
        "allowJs": false,
        "moduleResolution": "node",
        "outDir": "./dist"
    },
    "types": [
        "@types/node"
    ],
    "include": [
        "./source/**/*"
    ],
    "exclude": [
        "./node_modules"
    ]
}
